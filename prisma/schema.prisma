generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model with phone-based authentication
model User {
  id          String   @id @default(cuid())
  phone       String   @unique
  name        String?
  avatar      String?
  credits     Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  chats       Chat[]
  images      GeneratedImage[]
  videos      GeneratedVideo[]
  musics      GeneratedMusic[]
  voices      GeneratedVoice[]
  transactions CreditTransaction[]
  otpCodes    OtpCode[]
}

// OTP verification codes
model OtpCode {
  id        String   @id @default(cuid())
  phone     String
  code      String
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

// Credit transactions
model CreditTransaction {
  id          String   @id @default(cuid())
  userId      String
  amount      Int
  type        TransactionType
  description String?
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id])
}

enum TransactionType {
  PURCHASE
  USAGE
  BONUS
  REFUND
}

// Chat conversations
model Chat {
  id        String    @id @default(cuid())
  userId    String
  title     String    @default("گفتگوی جدید")
  model     AIModel
  agentType AgentType @default(GENERAL)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  user      User      @relation(fields: [userId], references: [id])
  messages  Message[]
}

model Message {
  id        String   @id @default(cuid())
  chatId    String
  role      MessageRole
  content   String
  createdAt DateTime @default(now())
  
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum AIModel {
  GPT4
  CLAUDE
  GEMINI
  LLAMA
  MISTRAL
}

enum AgentType {
  GENERAL
  CODER
  WRITER
  FINANCIAL
  TRANSLATOR
  MARKETING
  FANTUBE
}

// Generated Images
model GeneratedImage {
  id        String   @id @default(cuid())
  userId    String
  prompt    String
  imageUrl  String
  model     String   @default("dall-e-3")
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id])
}

// Generated Videos
model GeneratedVideo {
  id        String   @id @default(cuid())
  userId    String
  prompt    String
  videoUrl  String
  model     String
  status    GenerationStatus @default(PENDING)
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id])
}

// Generated Music
model GeneratedMusic {
  id        String   @id @default(cuid())
  userId    String
  prompt    String
  musicUrl  String
  model     String
  status    GenerationStatus @default(PENDING)
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id])
}

// Generated Voice/Audio
model GeneratedVoice {
  id        String   @id @default(cuid())
  userId    String
  text      String
  voiceUrl  String
  model     String
  status    GenerationStatus @default(PENDING)
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id])
}

enum GenerationStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// Credit packages for purchase
model CreditPackage {
  id          String   @id @default(cuid())
  name        String
  credits     Int
  price       Int      // Price in Toman
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
}
